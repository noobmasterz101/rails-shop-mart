<h2>Orders</h2>

<hr>
<table id="customers">
    <thead>
        <tr>
            <th>Order ID</th>
            <th>User ID</th>
            <th>Total Cost</th>
            <th>Status</th>
            <th>Placed At</th>
            <th colspan="3"></th>
        </tr>
    </thead>
    <tbody>
        <% @orders.each do |order| %>
            <tr>
                <td><%= order.id %></td>
                <td><%= order.user_id %></td>
                <td><%= order.cost %></td>
                <td><%= order.status %></td>
                <td><%= order.created_at %></td>
            </tr>
        <% end %>

    </tbody>
</table>


