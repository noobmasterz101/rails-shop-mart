<h1>Admin Sign In</h1>
<%= form_with url: ad_sign_in_path do |f| %>
  <p>
  <%= f.label 'email:'%><br>
  <%= f.text_field :email, id: 'email' %>
  </p>
  <p>
  <%= f.label 'password:'%><br>
  <%= f.password_field :password, id: 'password' %>
  </p>
  <p>
  <%= f.submit 'Log In' %>
  </p>
  <p>
  <%= link_to 'Create a new admin', ad_sign_up_path %>
  </p>
<% end %>