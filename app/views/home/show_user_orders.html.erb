<% if Current.user %>
    <p>Logged in as: <%= Current.user.email %></p>
    <p><%= button_to 'Logout', logout_path, method: :delete %></p>
<% end %>

<%= link_to 'Back', home_path %>

<h2>User Orders</h2>
<table>
    <thead>
        <tr>
            <th>Order ID</th>
            <th>Total Cost</th>
            <th>Discount</th>
            <th>Status</th>
            <th>Placed At</th>
            <th colspan="3"></th>
        </tr>
    </thead>
    <tbody>
        <% @orders.each do |order| %>
            <tr>
                <td><%= order.id %></td>
                <td><%= order.cost %></td>
                <td><%= order.discount %></td>
                <td><%= order.status %></td>
                <td><%= order.created_at %></td>
            </tr>
        <% end %>

    </tbody>
</table>