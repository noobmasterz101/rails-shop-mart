<h1>Edit Password</h1>
<%= form_with model: Current.user, url: edit_password_path, :html => {:class => 'form-style-5'} do |f| %>
  <p>
  <%= f.label 'password:'%><br>
  <%= f.password_field :password %>
  </p>
  <p>
  <%= f.label 'password_confirmation:'%><br>
  <%= f.password_field :password_confirmation %>
  </p>
  <p>
  <%= f.submit 'Update' %>
  </p>
<% end %>